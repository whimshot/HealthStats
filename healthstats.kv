#:kivy 1.10.0
#:include inputpad.kv

<Charts@Image>
    source: 'ChartImage.png'
    allow_stretch: True
    keep_ratio: False

<Chart>
    keep_ratio: False
    allow_stretch: True

<WeightChart@Chart>
    source: 'WeightChart.png'

<BPChart@Chart>
    source: 'BPChart.png'

<SmallCharts@Chart>
    source: 'SmallCharts.png'

<HealthStats>:
    inputpad: input_pad
    statsimage: stats_image
    size: self.size
    orientation: 'horizontal'
    SmallCharts:
        id: stats_image
        size_hint: (.5,1)
    InputPad:
        id: input_pad
        size_hint: (.5,1)

<HealthCarousel>
    healthstats: health_stats
    weightchart: weight_chart
    bpchart: bp_chart
    HealthStats:
        id: health_stats
    WeightChart:
        id: weight_chart
    BPChart:
        id: bp_chart
