#:kivy 1.10.0
#:include inputpad.kv
#:include chart.kv

<Toolbar@BoxLayout>:
    size_hint_y: None
    height: '48dp'
    padding: '4dp'
    spacing: '4dp'
    canvas:
        Color:
            rgba: .2, .2, .2, .6
        Rectangle:
            pos: self.pos
            size: self.size

<HealthStats>:
    inputpad: input_pad
    statsimage: stats_image
    size: self.size
    orientation: 'horizontal'
    SmallCharts:
        id: stats_image
        size_hint: (.5,1)
    InputPad:
        id: input_pad
        size_hint: (.5,1)

<HealthCarousel>:
    healthstats: health_stats
    weightchart: weight_chart
    bpchart: bp_chart
    min_move: 0.05
    HealthStats:
        id: health_stats
    WeightChart:
        id: weight_chart
    BPChart:
        id: bp_chart

<HealthBox>
    hc: hc
    tb: tb
    orientation: 'vertical'
    HealthCarousel:
        id: hc
    Toolbar:
        id: tb
        Label:
        Label:
        Button
            text: 'Weight Chart'
            background_color: [0, 1, 1, 1]
            on_press: root.hc.load_slide(root.hc.weightchart)
        Button:
            text: 'BP Chart'
            background_color: [0, 1, 1, 1]
            on_press: root.hc.load_slide(root.hc.bpchart)
        Button
            text: 'Input Screen'
            background_color: [0, 1, 1, 1]
            on_press: root.hc.load_slide(root.hc.healthstats)
