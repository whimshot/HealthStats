#:kivy 1.10.0
#:include inputpad.kv
#:include newchart.kv

<HealthStats>:
    inputpad: input_pad
    statsimage: stats_image
    size: self.size
    orientation: 'horizontal'
    SmallCharts:
        id: stats_image
        size_hint: (.5,1)
    InputPad:
        id: input_pad
        size_hint: (.5,1)

<HealthCarousel>:
    healthstats: health_stats
    weightchart: weight_chart
    bpchart: bp_chart
    min_move: 0.05
    HealthStats:
        id: health_stats
    WeightChart:
        id: weight_chart
    BPChart:
        id: bp_chart
