#:kivy 1.10.0
#:include inputpad.kv
#:include chart.kv

<TglBtn>
    on_press: self.toggle()
    background_color: [0, 0, 1, 1]

<Toolbar@BoxLayout>:
    size_hint_y: None
    height: '48dp'
    padding: '4dp'
    spacing: '4dp'
    canvas:
        Color:
            rgba: .2, .2, .2, .6
        Rectangle:
            pos: self.pos
            size: self.size

<HealthStats>:
    inputpad: input_pad
    statsimage: stats_image
    size: self.size
    orientation: 'horizontal'
    SmallCharts:
        id: stats_image
        size_hint: (.5,1)
    InputPad:
        id: input_pad
        size_hint: (.5,1)

<HealthCarousel>:
    healthstats: health_stats
    weightchart: weight_chart
    bpchart: bp_chart
    min_move: 0.05
    direction: 'right'
    loop: True
    HealthStats:
        id: health_stats
    WeightChart:
        id: weight_chart
    BPChart:
        id: bp_chart

<HealthBox>
    hc: hc
    toolbar: toolbar
    orientation: 'vertical'
    HealthCarousel:
        id: hc
    Toolbar:
        toggle: toggle
        id: toolbar
        TglBtn:
            id: toggle
            text: 'Scroll'
            background_color: [0, 0, 1, 1]
        Button:
            text: 'Input Screen'
            background_color: [0, 1, 1, 1]
            on_press: root.hc.load_slide(root.hc.healthstats)
        Button:
            text: 'Weight\n& BMI'
            background_color: [0, 1, 1, 1]
            halign: 'center'
            on_press: root.hc.load_slide(root.hc.weightchart)
        Button:
            text: 'Blood Pressure\n& Pulse'
            background_color: [0, 1, 1, 1]
            halign: 'center'
            on_press: root.hc.load_slide(root.hc.bpchart)
        Button:
            text: 'Settings'
            on_press: app.open_settings()
            background_color: [.75, 0, .75, 1]
        Button:
            text: 'Exit'
            on_press: app.stop()
            background_color: [1, 0, 0, 1]
