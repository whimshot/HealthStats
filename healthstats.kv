#:kivy 1.10.0

<NumberButton@Button>
    font_size: '24sp'
    on_press: self.parent.parent.parent.new_digit(self.text)
    background_color: [0, 0, 1, 1]

<DeleteButton@Button>
    font_size: '24sp'
    on_press: self.parent.parent.parent.delete_key(self.text)
    background_color: [1, 0, 0, 1]

<StatisticButton@Button>
    font_size: '24sp'
    text_size: self.size
    halign: 'center'
    valign: 'middle'
    on_press: self.parent.parent.parent.statistic_key(self.text)
    background_color: [0, 1, 0, 1]

<ExitButton@Button>
    font_size: '24sp'
    on_press: app.stop()

<NumberDisplay@Label>
    text: self.parent.parent.screen_text
    font_size: '32sp'

<FunctionPad@GridLayout>
    cols: 4
    StatisticButton
        text: "Weight\n(Kg)"
        id: weight
    StatisticButton:
        text: "Systolic"
    StatisticButton:
        text: "Diastolic"
    StatisticButton:
        text: "Pulse"

<NumberPad@GridLayout>
    cols: 3
    NumberButton:
        text: "1"
    NumberButton:
        text: "2"
    NumberButton:
        text: "3"
    NumberButton:
        text: "4"
    NumberButton:
        text: "5"
    NumberButton:
        text: "6"
    NumberButton:
        text: "7"
    NumberButton:
        text: "8"
    NumberButton:
        text: "9"
    DeleteButton:
        text: "delete"
    NumberButton:
        text: "0"
    NumberButton:
        text: "."

<Charts@Image>
    source: 'ChartImage.png'
    allow_stretch: True
    keep_ratio: False

<InputPad@BoxLayout>
    numscreen: number_screen
    funcpad: function_pad
    numpad: number_pad
    text: ""
    orientation: 'vertical'
    size_hint: (.5,1)
    NumberDisplay:
        id: number_screen
        size_hint: (1, .2)
    FunctionPad:
        id: function_pad
        size_hint: (1, .2)
    NumberPad:
        id: number_pad
        size_hint: (1,.6)

<HealthStats>:
    inputpad: input_pad
    statsimage: stats_image
    size: self.size
    orientation: 'horizontal'
    Charts:
        id: stats_image
        size_hint: (.5,1)
    InputPad:
        id: input_pad
        size_hint: (.5,1)
