#:kivy 1.10.0

<NumberButton@Button>
    font_size: '24sp'
    on_press: self.parent.parent.parent.new_digit(self.text)
    background_color: (0.0, 0, 128, 0.5)

<FunctionButton@Button>
    font_size: '24sp'
    on_press: self.parent.parent.parent.key_function(self.text)
    background_color: (0, 128, 0, 0.3)

<ExitButton@Button>
    font_size: '24sp'
    on_press: app.stop()
    background_color: (255, 0, 0, 0.5)

<NumberDisplay@Label>
    text: self.parent.parent.screen_text
    font_size: '32sp'

<FunctionPad@GridLayout>
    cols: 4
    FunctionButton:
        text: "weight"
    FunctionButton:
        text: "systolic"
    FunctionButton:
        text: "diastolic"
    FunctionButton:
        text: "pulse"

<NumberPad@GridLayout>
    cols: 3
    NumberButton:
        text: "1"
    NumberButton:
        text: "2"
    NumberButton:
        text: "3"
    NumberButton:
        text: "4"
    NumberButton:
        text: "5"
    NumberButton:
        text: "6"
    NumberButton:
        text: "7"
    NumberButton:
        text: "8"
    NumberButton:
        text: "9"
    FunctionButton:
        text: "delete"
    NumberButton:
        text: "0"
    NumberButton:
        text: "."

<HealthStats>:
    inputpad: input_pad
    statsimage: stats_image
    size: self.size
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint: (.5,1)
        Image:
            size_hint: (1,.5)
            source: 'weight.png'
            id: stats_image
            allow_stretch: True
            keep_ratio: False
    BoxLayout:
        numscreen: number_screen
        text: ""
        orientation: 'vertical'
        id: input_pad
        size_hint: (.5,1)
        NumberDisplay:
            id: number_screen
            size_hint: (1, .2)
        FunctionPad:
            id: function_pad
            size_hint: (1, .2)
        NumberPad:
            id: number_pad
            size_hint: (1,.6)
