#:kivy 1.10.0

<NumberKey>:
    font_size: '24sp'
    background_color: [0, 0, 1, 1]
    on_press: self.keypress()

<DeleteKey>:
    font_size: '24sp'
    background_color: [1, 0, 0, 1]
    on_press: self.parent.deletekey()

<StatisticKey>:
    font_size: '24sp'
    text_size: self.size
    halign: 'center'
    valign: 'middle'
    background_color: [0, 1, 0, 1]
    on_press: self.parent.send_data(self.text)

<InputDisplay>:
    text: "Health Stats"
    font_size: '32sp'

<FunctionPad>:
    orientation: 'horizontal'
    StatisticKey
        text: "Weight\n(Kg)"
        id: weight
    StatisticKey:
        text: "Systolic"
    StatisticKey:
        text: "Diastolic"
    StatisticKey:
        text: "Pulse"

<NumberPad>:
    text: ""
    on_text: self.numberkey()
    cols: 3
    NumberKey:
        text: "1"
    NumberKey:
        text: "2"
    NumberKey:
        text: "3"
    NumberKey:
        text: "4"
    NumberKey:
        text: "5"
    NumberKey:
        text: "6"
    NumberKey:
        text: "7"
    NumberKey:
        text: "8"
    NumberKey:
        text: "9"
    DeleteKey:
        text: "Delete"
    NumberKey:
        text: "0"
    NumberKey:
        text: "."

<InputPad>:
    numscreen: number_screen
    funcpad: function_pad
    numpad: number_pad
    text: "Health Stats"
    orientation: 'vertical'
    InputDisplay:
        id: number_screen
        size_hint: (1, .2)
    FunctionPad:
        id: function_pad
        size_hint: (1, .2)
    NumberPad:
        id: number_pad
        size_hint: (1,.6)
